###############################################
# Exemplo de configuração (.env.example)
# Copie para .env e ajuste conforme seu projeto
###############################################

## 1) URLs da aplicação
URL_ALVO=https://sua-aplicacao.com/app/home
BASE_URL=https://sua-aplicacao.com/login
EXPECTED_PATH=/app/home

## 2) Credenciais e controle de login
LOGIN_USERNAME=seu.usuario
LOGIN_PASSWORD=suasenha123
SKIP_LOGIN=false
LOGIN_REQUIRED=true

## 3) Seletores de login (CSS válidos)
# Evite pseudo-seletores como :contains()
LOGIN_SELECTOR_USERNAME=#email
LOGIN_SELECTOR_PASSWORD=#password
LOGIN_SELECTOR_SUBMIT=button[type="submit"]

## 4) Execução (Puppeteer)
HEADLESS=false
SLOWMO=50
MAXIMIZE=true
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

## 5) Navegação
NAV_TYPE=generic
# NAV_MAIN_PANEL_SELECTOR=nav,.navigation,.sidebar

## 6) Timeouts e delays (ms)
LOGIN_FIND_TIMEOUT=8000
LOGIN_CONFIRM_TIMEOUT=12000
POST_LOGIN_WAIT=3000
NAVIGATION_DELAY=2000
WAIT_TEXT_READY_MS=800

## 7) Testes: Cores, Texto, Screenshots
PALETA_CORES_PERMITIDAS=#ffffff,#000000,#f8f9fa,#1e293b,#1f3f6e
ENABLE_SCREENSHOTS=true
TEXT_ONLY_MODE=false
SEARCH_TEXTS=null,NaN,undefined,erro,exception

## 8) Teste de Requisições (ms)
REQ_WAIT_AFTER_LOAD_MS=1500
REQ_WAIT_AFTER_TRIGGER_MS=800
REQ_MAX_PAGE_TEST_MS=6000

## 9) Logs e Debug
LOGIN_DEBUG=false
IGNORE_NETWORK_FAILURE=true
CAPTURE_JS_CONSOLE_ERRORS=true
IGNORE_CONSOLE_PATTERNS=Attempting initialization,DevTools,Failed to load resource

## 10) Metadados opcionais
# LOGIN_ID_VERIFICACAO=40
# LOGIN_ID_SISTEMA=11
# LOGIN_ID_CONTRATO=7
# LOGIN_NOME_SISTEMA=SEU_SISTEMA
# LOGIN_CONTRATO_NOME=SEU_CONTRATO
